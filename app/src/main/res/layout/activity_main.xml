<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrador.wishers.Main3Activity">

    <TextView
        android:layout_marginBottom="50sp"
        android:id="@+id/title"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title" />

    <Button

        android:layout_marginBottom="50sp"
        android:textSize="30sp"
        android:typeface="sans"
        android:textColor="@color/colorWhite"
        android:background="@color/color"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_below="@+id/title"
        android:id="@+id/pedirdeseo"
        android:text="@string/pedirdeseo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:textSize="30sp"
        android:typeface="sans"
        android:textColor="@color/colorWhite"
        android:background="@color/color"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_below="@+id/pedirdeseo"
        android:id="@+id/cumplirdesep"
        android:text="@string/cumplirdeseo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />
</RelativeLayout>
